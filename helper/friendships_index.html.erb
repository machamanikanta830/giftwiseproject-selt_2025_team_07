<div class="min-h-screen bg-[#f5f5fb]">
  <!-- Header -->
  <header class="w-full bg-white shadow-sm">
    <div class="max-w-6xl mx-auto flex items-center justify-between px-6 py-4">
      <%= link_to dashboard_path, class: "flex items-center gap-2 hover:opacity-90 transition" do %>
        <div class="w-9 h-9 rounded-2xl bg-[#f4e6ff] flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-6 h-6 text-[#a855f7]" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="8" width="18" height="13" rx="2" ry="2"></rect>
            <path d="M12 8v13"></path>
            <path d="M3 12h18"></path>
          </svg>
        </div>
        <span class="text-xl font-semibold tracking-tight">GiftWise</span>
      <% end %>

      <nav class="flex items-center gap-4">
        <%= link_to friendships_path, class: "text-gray-700 hover:text-[#a855f7] transition" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
            <circle cx="9" cy="7" r="4"></circle>
            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
          </svg>
        <% end %>
      </nav>
    </div>
  </header>

  <div class="max-w-4xl mx-auto px-6 py-12">
    <%= link_to dashboard_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 mb-6" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="19" y1="12" x2="5" y2="12"></line>
        <polyline points="12 19 5 12 12 5"></polyline>
      </svg>
      Back to Dashboard
    <% end %>

    <h1 class="text-3xl font-bold mb-8">Friends</h1>

    <!-- Pending Friend Requests -->
    <% if @pending_requests.any? %>
      <div class="bg-white rounded-3xl p-8 shadow-sm border border-gray-200 mb-6">
        <h2 class="text-xl font-semibold mb-4">Pending Requests (<%= @pending_requests.count %>)</h2>
        <div class="space-y-3">
          <% @pending_requests.each do |friendship| %>
            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-xl">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-[#f4e6ff] flex items-center justify-center">
                  <span class="font-semibold text-[#a855f7]"><%= friendship.user.name[0].upcase %></span>
                </div>
                <div>
                  <p class="font-medium"><%= friendship.user.name %></p>
                  <p class="text-sm text-gray-500"><%= friendship.user.email %></p>
                </div>
              </div>
              <div class="flex gap-2">
                <%= button_to "Accept", friendship_path(friendship, status: 'accept'), 
                              method: :patch,
                              class: "px-4 py-2 rounded-xl bg-[#a855f7] text-white text-sm font-medium hover:bg-[#9333ea] transition" %>
                <%= button_to "Reject", friendship_path(friendship, status: 'reject'), 
                              method: :patch,
                              class: "px-4 py-2 rounded-xl bg-gray-200 text-gray-700 text-sm font-medium hover:bg-gray-300 transition" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- My Friends -->
    <div class="bg-white rounded-3xl p-8 shadow-sm border border-gray-200 mb-6">
      <h2 class="text-xl font-semibold mb-4">My Friends (<%= @friends.count %>)</h2>
      <% if @friends.any? %>
        <div class="space-y-3">
          <% @friends.each do |friend| %>
            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-xl">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-[#f4e6ff] flex items-center justify-center relative">
                  <span class="font-semibold text-[#a855f7]"><%= friend.name[0].upcase %></span>
                  <% if friend.online? %>
                    <span class="absolute bottom-0 right-0 w-3 h-3 bg-green-500 border-2 border-white rounded-full"></span>
                  <% end %>
                </div>
                <div>
                  <p class="font-medium"><%= friend.name %></p>
                  <p class="text-sm text-gray-500"><%= friend.email %></p>
                </div>
              </div>
              <div class="flex gap-2">
                <%= link_to "Message", messages_path(friend_id: friend.id),
                            class: "px-4 py-2 rounded-xl bg-[#a855f7] text-white text-sm font-medium hover:bg-[#9333ea] transition" %>
                <%= button_to "Remove", friendship_path(current_user.friendships.find_by(friend: friend)),
                              method: :delete,
                              data: { turbo_confirm: "Remove #{friend.name} from friends?" },
                              class: "px-4 py-2 rounded-xl bg-red-100 text-red-700 text-sm font-medium hover:bg-red-200 transition" %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">You don't have any friends yet. Add some below!</p>
      <% end %>
    </div>

    <!-- Other Users -->
    <div class="bg-white rounded-3xl p-8 shadow-sm border border-gray-200">
      <h2 class="text-xl font-semibold mb-4">Add Friends</h2>
      <% if @other_users.any? %>
        <div class="space-y-3">
          <% @other_users.each do |user| %>
            <div id="user_<%= user.id %>" class="flex items-center justify-between p-4 bg-gray-50 rounded-xl">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-[#f4e6ff] flex items-center justify-center">
                  <span class="font-semibold text-[#a855f7]"><%= user.name[0].upcase %></span>
                </div>
                <div>
                  <p class="font-medium"><%= user.name %></p>
                  <p class="text-sm text-gray-500"><%= user.email %></p>
                </div>
              </div>
              <%= button_to "Add Friend", friendships_path(friend_id: user.id),
                            method: :post,
                            data: { turbo_stream: true },
                            class: "px-4 py-2 rounded-xl bg-green-500 text-white text-sm font-medium hover:bg-green-600 transition" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">No other users to add.</p>
      <% end %>
    </div>
  </div>
</div>
