<div class="min-h-screen bg-[#f5f5fb] flex items-center justify-center py-12 px-4">
  <div class="w-full max-w-2xl">
    <div class="bg-white rounded-3xl p-8 shadow-sm border border-gray-200">
      <!-- Header -->
      <div class="flex items-start justify-between mb-6">
        <div>
          <h1 class="text-2xl font-bold mb-1">Recipient Details</h1>
          <p class="text-sm text-gray-500">
            <%= @recipient.name %>
            <% if @recipient.relationship.present? %>
              · <span><%= @recipient.relationship %></span>
            <% end %>
          </p>
        </div>

        <div class="flex gap-2">
          <%= link_to "Back", recipients_path,
                      class: "rounded-full bg-gray-100 px-4 py-2 text-xs sm:text-sm font-medium text-gray-800 hover:bg-gray-200" %>
          <%= link_to "Dashboard", dashboard_path,
                      class: "rounded-full bg-gray-100 px-4 py-2 text-xs sm:text-sm font-medium text-gray-800 hover:bg-gray-200" %>
        </div>
      </div>

      <!-- All fields in a compact 2-column grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm mb-6">
        <!-- Name -->
        <div>
          <p class="text-gray-500 font-medium mb-1">Name</p>
          <p class="text-gray-900"><%= @recipient.name %></p>
        </div>

        <!-- Email -->
        <div>
          <p class="text-gray-500 font-medium mb-1">Email</p>
          <p class="text-gray-900"><%= @recipient.email.presence || "—" %></p>
        </div>

        <!-- Relationship -->
        <div>
          <p class="text-gray-500 font-medium mb-1">Relationship</p>
          <p class="text-gray-900"><%= @recipient.relationship.presence || "—" %></p>
        </div>

        <!-- Age -->
        <div>
          <p class="text-gray-500 font-medium mb-1">Age</p>
          <p class="text-gray-900"><%= @recipient.age.present? ? @recipient.age : "—" %></p>
        </div>

        <!-- Gender -->
        <div>
          <p class="text-gray-500 font-medium mb-1">Gender</p>
          <p class="text-gray-900"><%= @recipient.gender.presence || "—" %></p>
        </div>

        <!-- Occupation -->
        <div>
          <p class="text-gray-500 font-medium mb-1">Occupation</p>
          <p class="text-gray-900"><%= @recipient.occupation.presence || "—" %></p>
        </div>

        <!-- Budget -->
        <div>
          <p class="text-gray-500 font-medium mb-1">Budget</p>
          <p class="text-gray-900">
            <% if @recipient.budget.present? %>
              $<%= @recipient.budget %>
            <% else %>
              —
            <% end %>
          </p>
        </div>
      </div>

      <!-- Long text fields still side by side but allow wrapping -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
        <!-- Bio -->
        <div>
          <p class="text-gray-500 font-medium mb-1">Bio</p>
          <p class="text-gray-900 whitespace-pre-line">
            <%= @recipient.bio.presence || "—" %>
          </p>
        </div>

        <!-- Hobbies -->
        <div>
          <p class="text-gray-500 font-medium mb-1">Hobbies</p>
          <p class="text-gray-900 whitespace-pre-line">
            <%= @recipient.hobbies.presence || "—" %>
          </p>
        </div>

        <!-- Likes -->
        <div>
          <p class="text-gray-500 font-medium mb-1">Likes</p>
          <p class="text-gray-900 whitespace-pre-line">
            <%= @recipient.likes.presence || "—" %>
          </p>
        </div>

        <!-- Favorite Categories -->
        <div>
          <p class="text-gray-500 font-medium mb-1">Favorite Categories</p>
          <p class="text-gray-900 whitespace-pre-line">
            <%= @recipient.favorite_categories.presence || "—" %>
          </p>
        </div>

        <!-- Dislikes -->
        <div>
          <p class="text-gray-500 font-medium mb-1">Dislikes</p>
          <p class="text-gray-900 whitespace-pre-line">
            <%= @recipient.dislikes.presence || "—" %>
          </p>
        </div>
      </div>

      <!-- Buttons -->
      <div class="mt-8 flex justify-end gap-3">
        <%= link_to "Edit Recipient",
                    edit_recipient_path(@recipient),
                    class: "rounded-full bg-black px-5 py-2 text-sm font-semibold text-white hover:bg-gray-900" %>

        <%= button_to "Remove",
                      recipient_path(@recipient),
                      method: :delete,
                      form: { data: { turbo_confirm: "Remove this recipient?" } },
                      class: "rounded-full bg-red-50 px-5 py-2 text-sm font-semibold text-red-600 hover:bg-red-100" %>
      </div>
    </div>
  </div>
</div>
