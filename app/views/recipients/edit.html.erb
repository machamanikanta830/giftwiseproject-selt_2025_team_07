<div class="min-h-screen bg-[#f5f5fb]">



  <!-- Main content wrapper (aligned with create) -->
  <div class="w-full max-w-2xl mx-auto px-6 py-12">
    <div class="mb-6">
      <%= link_to recipient_path(@recipient),
                  class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900" do %>
        <svg xmlns="http://www.w3.org/2000/svg"
             class="w-5 h-5"
             viewBox="0 0 24 24"
             fill="none"
             stroke="currentColor"
             stroke-width="2"
             stroke-linecap="round"
             stroke-linejoin="round">
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        <span>Back to Recipient</span>
      <% end %>
    </div>

    <div class="bg-white rounded-3xl shadow-lg p-8">
      <div class="flex items-center justify-center mb-8">
        <div class="w-12 h-12 rounded-2xl bg-[#f4e6ff] flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg"
               viewBox="0 0 24 24"
               class="w-8 h-8 text-[#a855f7]"
               fill="none"
               stroke="currentColor"
               stroke-width="2"
               stroke-linecap="round"
               stroke-linejoin="round">
            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
            <circle cx="9" cy="7" r="4"></circle>
          </svg>
        </div>
      </div>

      <h1 class="text-3xl font-semibold text-center mb-2">Edit Recipient</h1>
      <p class="text-gray-600 text-center mb-8">Update this recipient's details</p>

      <% if @recipient.errors.any? %>
        <div class="mb-6 px-4 py-3 rounded-lg bg-red-50 border border-red-200">
          <h3 class="text-sm font-semibold text-red-700 mb-2">Please fix the following errors:</h3>
          <ul class="list-disc list-inside text-sm text-red-600 space-y-1">
            <% @recipient.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @recipient,
                    local: true,
                    class: "space-y-6",
                    data: { controller: "confirm-submit", action: "submit->confirm-submit#confirm", "confirm-submit-message-value": "Update this recipient?" } do |f| %>

        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <%# Name (mandatory) %>
            <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-2" do %>
              Name <span class="text-red-500" aria-hidden="true">*</span>
            <% end %>
            <%= f.text_field :name, required: true,
                             class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition" %>
          </div>

          <div>
            <%# Email (mandatory) %>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" do %>
              Email <span class="text-red-500" aria-hidden="true">*</span>
            <% end %>
            <%= f.email_field :email, required: true,
                              class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition" %>
          </div>
        </div>

        <!-- Divider + Section -->
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-sm font-semibold text-gray-900 mb-4">Additional Details</h3>

          <!-- 2 Columns: Relationship + Gender -->
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <%# Relationship (mandatory in UI) %>
              <%= f.label :relationship, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                Relationship <span class="text-red-500" aria-hidden="true">*</span>
              <% end %>
              <%= f.text_field :relationship, placeholder: "e.g., Friend, Cousin, Colleague",
                               class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition" %>
            </div>

            <div>
              <%# Gender (mandatory in UI) %>
              <%= f.label :gender, class: "block text-sm font-medium text-gray-700 mb-2" do %>
                Gender <span class="text-red-500" aria-hidden="true">*</span>
              <% end %>
              <%= f.select :gender, Recipient::GENDERS, { include_blank: "Select gender" },
                           class: "w-full px-4 py-3 rounded-lg border border-gray-300 bg-white focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition" %>
            </div>
          </div>

          <!-- 2 Columns: Age + Occupation -->
          <div class="grid md:grid-cols-2 gap-6 mt-6">
            <div>
              <%= f.label :age, "Age", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.number_field :age, min: 0,
                                 class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition" %>
            </div>

            <div>
              <%= f.label :occupation, "Occupation", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_field :occupation,
                               class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition" %>
            </div>
          </div>

          <!-- Textareas (Bio, Hobbies, Likes, etc.) -->
          <% [
               [:bio, "Bio"],
               [:hobbies, "Hobbies"],
               [:likes, "Likes"],
               [:favorite_categories, "Favorite Categories"],
               [:dislikes, "Dislikes"]
             ].each do |field, label| %>
            <div class="mt-6">
              <%= f.label field, label, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_area field, rows: 2,
                              class: "w-full px-4 py-3 rounded-lg border border-gray-300 resize-none focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition" %>
            </div>
          <% end %>

          <!-- Budget -->
          <div class="mt-6">
            <%= f.label :budget, "Budget", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="relative">
              <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-500">$</span>
              <%= f.number_field :budget, step: 0.01, min: 0, placeholder: "0.00",
                                 class: "w-full pl-8 pr-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition" %>
            </div>
          </div>
        </div>

        <!-- Submit + Cancel -->
        <div class="flex gap-4 pt-6">
          <%= link_to "Cancel", recipient_path(@recipient),
                      class: "flex-1 px-6 py-3 rounded-full border border-gray-300 text-gray-700 font-semibold hover:bg-gray-50 transition text-center" %>

          <%= f.submit "Update Recipient",
                       class: "flex-1 px-8 py-3 rounded-full bg-black text-white font-semibold hover:bg-gray-900 transition cursor-pointer" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
