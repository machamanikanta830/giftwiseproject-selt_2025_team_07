<div class="min-h-screen bg-[#f5f5fb] flex items-center justify-center py-12 px-4">
  <div class="w-full max-w-md">

    <div class="bg-white rounded-3xl p-8 shadow-sm border border-gray-200">
      <div class="text-center mb-8">
        <div class="w-16 h-16 rounded-2xl bg-[#f4e6ff] flex items-center justify-center mx-auto mb-4">
        </div>
        <h1 class="text-2xl font-bold mb-2">Create New Recipient</h1>
        <p class="text-gray-600 text-sm">Add someone you want to buy gifts for</p>
      </div>

      <%= form_with model: @recipient, local: true do |f| %>
        <% if @recipient.errors.any? %>
          <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-2xl">
            <h3 class="text-red-800 font-semibold mb-2 text-sm">
              <%= pluralize(@recipient.errors.count, "error") %> prevented this recipient from being saved:
            </h3>
            <ul class="list-disc list-inside text-red-700 text-sm">
              <% @recipient.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Name (required) -->
        <div class="mb-4">
          <%= f.label :name, "Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :name,
                           class: "w-full px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-[#a855f7] focus:border-transparent outline-none transition",
                           placeholder: "e.g., Mom, Best Friend",
                           required: true %>
        </div>

        <!-- Email -->
        <div class="mb-4">
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email,
                            class: "w-full px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-[#a855f7] focus:border-transparent outline-none transition",
                            placeholder: "e.g., mom@example.com" %>
        </div>

        <!-- Relationship (uses your RELATIONSHIPS constant) -->
        <div class="mb-4">
          <%= f.label :relationship, "Relationship", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :relationship,
                       Recipient::RELATIONSHIPS,
                       { include_blank: "Select relationship" },
                       class: "w-full px-4 py-3 border border-gray-300 rounded-2xl bg-white focus:ring-2 focus:ring-[#a855f7] focus:border-transparent outline-none transition" %>
        </div>

        <!-- Age + Gender -->
        <div class="grid grid-cols-2 gap-4 mb-4">
          <div>
            <%= f.label :age, "Age", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.number_field :age,
                               min: 0,
                               class: "w-full px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-[#a855f7] focus:border-transparent outline-none transition" %>
          </div>

          <div>
            <%= f.label :gender, "Gender", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :gender,
                             class: "w-full px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-[#a855f7] focus:border-transparent outline-none transition",
                             placeholder: "e.g., Female" %>
          </div>
        </div>

        <!-- Occupation -->
        <div class="mb-4">
          <%= f.label :occupation, "Occupation", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :occupation,
                           class: "w-full px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-[#a855f7] focus:border-transparent outline-none transition",
                           placeholder: "e.g., Software Engineer" %>
        </div>

        <!-- Bio -->
        <div class="mb-4">
          <%= f.label :bio, "Bio", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_area :bio,
                          rows: 3,
                          class: "w-full px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-[#a855f7] focus:border-transparent outline-none transition resize-none",
                          placeholder: "Short description..." %>
        </div>

        <!-- Hobbies, Likes, Favorite Categories, Dislikes -->
        <% [
             [:hobbies, "Hobbies"],
             [:likes, "Likes"],
             [:favorite_categories, "Favorite Categories"],
             [:dislikes, "Dislikes"]
           ].each do |field, label| %>
          <div class="mb-4">
            <%= f.label field, label, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_area field,
                            rows: 2,
                            class: "w-full px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-[#a855f7] focus:border-transparent outline-none transition resize-none" %>
          </div>
        <% end %>

        <!-- Budget -->
        <div class="mb-6">
          <%= f.label :budget, "Budget", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <span class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500 font-medium">$</span>
            <%= f.number_field :budget,
                               step: 0.01,
                               min: 0,
                               class: "w-full pl-8 pr-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-[#a855f7] focus:border-transparent outline-none transition",
                               placeholder: "0.00" %>
          </div>
        </div>

        <!-- Buttons -->
        <%= f.submit "Create Recipient",
                     class: "w-full py-3 px-6 rounded-full bg-black text-white font-semibold hover:bg-gray-900 transition cursor-pointer" %>

        <%= link_to "Back to dashboard", dashboard_path,
                    class: "block text-center w-full py-3 px-6 rounded-full bg-gray-100 text-gray-700 font-semibold hover:bg-gray-200 transition mt-3" %>
      <% end %>
    </div>
  </div>
</div>
