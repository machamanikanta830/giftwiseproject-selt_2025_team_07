<!DOCTYPE html>
<html>
<head>
  <title>Giftwiseproject</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Tailwind build -->
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>

  <!-- Your app-specific styles (optional, keep if file exists) -->
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

  <%= javascript_importmap_tags %>
</head>

<body class="bg-[#f5f5fb] text-gray-900">
<% if notice.present? || alert.present? %>
  <div id="flash-message"
       class="fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2
              z-50 px-8 py-4 rounded-2xl shadow-lg text-center text-base font-medium
              transition-all duration-700 ease-in-out
              <%= notice.present? ? 'bg-green-100 border border-green-300 text-green-800' : 'bg-red-100 border border-red-300 text-red-800' %>">
    <%= notice || alert %>
  </div>
<% end %>

<%= javascript_tag do %>
  document.addEventListener("turbo:load", () => {
  const flash = document.getElementById("flash-message");
  if (flash) {
  // Show it for 2.5 seconds
  setTimeout(() => {
  flash.classList.add("opacity-0", "scale-90");
  }, 2500);

  // Fully remove it from DOM after 3.5 seconds
  setTimeout(() => {
  flash.remove();
  }, 1000);
  }
  });
<% end %>



<%= yield %>
</body>
</html>