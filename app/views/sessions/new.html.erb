<div class="min-h-screen bg-[#f5f5fb] flex items-center justify-center px-6">
  <div class="w-full max-w-md">
    <div class="bg-white rounded-3xl shadow-lg p-8">
      <div class="flex items-center justify-center mb-8">
        <div class="w-12 h-12 rounded-2xl bg-[#f4e6ff] flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-8 h-8 text-[#a855f7]" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="8" width="18" height="13" rx="2" ry="2"></rect>
            <path d="M12 8v13"></path>
            <path d="M3 12h18"></path>
            <path d="M12 8h4a2 2 0 0 0 0-4c-3 0-4 4-4 4z"></path>
            <path d="M12 8H8a2 2 0 0 1 0-4c3 0 4 4 4 4z"></path>
          </svg>
        </div>
      </div>

      <h1 class="text-3xl font-semibold text-center mb-2">Welcome Back</h1>
      <p class="text-gray-600 text-center mb-8">Log in to continue to GiftWise</p>

      <% if flash[:alert] %>
        <div class="mb-6 px-4 py-3 rounded-lg bg-red-50 border border-red-200 text-red-700">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= button_to "/auth/google_oauth2", method: :post, data: { turbo: false }, class: "w-full mb-6 px-6 py-3 rounded-full border-2 border-gray-300 bg-white text-gray-700 font-semibold hover:bg-gray-50 transition flex items-center justify-center gap-3" do %>
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M19.8 10.2273C19.8 9.51819 19.7364 8.83637 19.6182 8.18182H10.2V12.05H15.5818C15.3364 13.3 14.5909 14.3591 13.4727 15.0682V17.5773H16.7636C18.6727 15.8364 19.8 13.2727 19.8 10.2273Z" fill="#4285F4"/>
          <path d="M10.2 20C12.9 20 15.1727 19.1045 16.7636 17.5773L13.4727 15.0682C12.5318 15.6682 11.3409 16.0227 10.2 16.0227C7.59545 16.0227 5.38182 14.2636 4.55909 11.9H1.15909V14.4909C2.73636 17.6318 6.20909 20 10.2 20Z" fill="#34A853"/>
          <path d="M4.55909 11.9C4.35909 11.3 4.24545 10.6591 4.24545 10C4.24545 9.34091 4.35909 8.7 4.55909 8.1V5.50909H1.15909C0.481818 6.85909 0.0909091 8.38636 0.0909091 10C0.0909091 11.6136 0.481818 13.1409 1.15909 14.4909L4.55909 11.9Z" fill="#FBBC05"/>
          <path d="M10.2 3.97727C11.4591 3.97727 12.5864 4.40909 13.4636 5.24091L16.3909 2.31364C15.1682 1.18636 12.9045 0 10.2 0C6.20909 0 2.73636 2.36818 1.15909 5.50909L4.55909 8.1C5.38182 5.73636 7.59545 3.97727 10.2 3.97727Z" fill="#EA4335"/>
        </svg>
        Continue with Google
      <% end %>

      <div class="relative mb-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-white text-gray-500">Or continue with email</span>
        </div>
      </div>

      <%= form_with url: login_path, method: :post, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email",
                            class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition" %>
        </div>

        <div class="space-y-1">
          <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>

          <div data-controller="password-visibility">
            <div class="flex items-center border border-gray-300 rounded-lg focus-within:ring-2 focus-within:ring-[#a855f7] focus-within:border-transparent">
              <%= f.password_field :password,
                                   required: true,
                                   autocomplete: "current-password",
                                   class: "flex-1 px-4 py-3 rounded-lg border-none focus:outline-none",
                                   data: { "password-visibility-target": "input" } %>

              <button
                type="button"
                data-action="click->password-visibility#toggle"
                class="px-3 text-gray-400 hover:text-gray-600"
                aria-label="Toggle password visibility"
              >
                <svg data-password-visibility-target="iconOn"
                     xmlns="http://www.w3.org/2000/svg"
                     class="w-5 h-5"
                     fill="none"
                     viewBox="0 0 24 24"
                     stroke="currentColor"
                     stroke-width="2">
                  <path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7S1 12 1 12z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>

                <svg data-password-visibility-target="iconOff"
                     xmlns="http://www.w3.org/2000/svg"
                     class="w-5 h-5 hidden"
                     fill="none"
                     viewBox="0 0 24 24"
                     stroke="currentColor"
                     stroke-width="2">
                  <path d="M17.94 17.94A10.94 10.94 0 0 1 12 19c-7 0-11-7-11-7a21.77 21.77 0 0 1 5.06-5.94"/>
                  <path d="M1 1l22 22"/>
                  <path d="M9.88 9.88A3 3 0 0 0 12 15a3 3 0 0 0 2.12-.88"/>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <div>
          <%= f.submit "Log In", class: "w-full px-8 py-3 rounded-full bg-black text-white font-semibold hover:bg-gray-900 transition cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-4 text-center">
        <%= link_to "Forgot your password?", forgot_password_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
      </div>

      <div class="mt-6 text-center">
        <p class="text-sm text-gray-600">
          Don't have an account?
          <%= link_to "Sign Up", signup_path, class: "text-[#a855f7] font-semibold hover:text-[#7c3aed] transition" %>
        </p>
      </div>

      <div class="mt-6 text-center">
        <%= link_to "â† Back to Home", root_path, class: "text-sm text-gray-600 hover:text-gray-900 transition" %>
      </div>
    </div>
  </div>
</div>