<div class="min-h-screen bg-[#f5f5fb] flex items-center justify-center px-6 py-12">
  <div class="w-full max-w-2xl">
    <div class="bg-white rounded-3xl shadow-lg p-8">
      <div class="flex items-center justify-center mb-8">
        <div class="w-12 h-12 rounded-2xl bg-[#f4e6ff] flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-8 h-8 text-[#a855f7]" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
        </div>
      </div>

      <h1 class="text-3xl font-semibold text-center mb-2">Edit Profile</h1>
      <p class="text-gray-600 text-center mb-8">Update your personal information</p>

      <% if @user.errors.any? %>
        <div class="mb-6 px-4 py-3 rounded-lg bg-red-50 border border-red-200">
          <h3 class="text-sm font-semibold text-red-700 mb-2">Please fix the following errors:</h3>
          <ul class="list-disc list-inside text-sm text-red-600 space-y-1">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, url: profile_path, method: :patch, class: "space-y-6" do |f| %>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <%= f.label :name, "Full Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :name, required: true,
                             class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition" %>
          </div>

          <div>
            <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.email_field :email, required: true,
                              class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition" %>
          </div>
        </div>

        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-sm font-semibold text-gray-900 mb-4">Optional Information</h3>

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <%= f.label :date_of_birth, "Date of Birth", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.date_field :date_of_birth, max: Date.today,
                               class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition" %>
            </div>

            <div>
              <%= f.label :phone_number, "Phone Number", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.telephone_field :phone_number, placeholder: "(123) 456-7890",
                                    class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition" %>
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-6 mt-6">
            <div>
              <%= f.label :gender, "Gender", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.select :gender, options_for_select(User::VALID_GENDERS, @user.gender), { include_blank: "Select gender" },
                           class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition" %>
            </div>

            <div>
              <%= f.label :occupation, "Occupation", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_field :occupation,
                               class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition" %>
            </div>
          </div>

          <div class="mt-6">
            <%= f.label :hobbies, "Hobbies & Interests", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_area :hobbies, rows: 2, placeholder: "e.g., Photography, hiking, cooking...",
                            class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition resize-none" %>
          </div>

          <div class="grid md:grid-cols-2 gap-6 mt-6">
            <div>
              <%= f.label :likes, "Things You Like", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_area :likes, rows: 2, placeholder: "e.g., Coffee, tech gadgets, travel...",
                              class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition resize-none" %>
            </div>

            <div>
              <%= f.label :dislikes, "Things You Dislike", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_area :dislikes, rows: 2, placeholder: "e.g., Spicy food, loud music...",
                              class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition resize-none" %>
            </div>
          </div>
        </div>

        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-sm font-semibold text-gray-900 mb-2">Change Password</h3>
          <p class="text-xs text-gray-600 mb-4">Leave blank if you don't want to change your password</p>

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <%= f.label :password, "New Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.password_field :password,
                                   class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition",
                                   placeholder: "Min. 8 characters",
                                   autocomplete: "new-password" %>
              <p class="mt-1 text-xs text-gray-500">Include uppercase, lowercase, number, and special character</p>
            </div>

            <div>
              <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.password_field :password_confirmation,
                                   class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#a855f7] focus:border-transparent transition",
                                   placeholder: "Confirm password",
                                   autocomplete: "new-password" %>
            </div>
          </div>
        </div>

        <div class="flex gap-4 pt-6">
          <%= link_to "Cancel", dashboard_path,
                      class: "flex-1 px-6 py-3 rounded-full border border-gray-300 text-gray-700 font-semibold hover:bg-gray-50 transition text-center" %>

          <%= f.submit "Update Profile",
                       class: "flex-1 px-8 py-3 rounded-full bg-black text-white font-semibold hover:bg-gray-900 transition cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <%= link_to "â† Back to Dashboard", dashboard_path, class: "text-sm text-gray-600 hover:text-gray-900 transition" %>
      </div>
    </div>
  </div>
</div>