<div class="min-h-screen bg-gradient-to-br from-violet-50 to-purple-50">
  <div class="container mx-auto px-4 py-8">
    <% if flash[:notice] %>
      <div class="mb-6 px-4 py-3 rounded-lg bg-green-50 border border-green-200 text-green-700">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="mb-6 px-4 py-3 rounded-lg bg-red-50 border border-red-200 text-red-700">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Welcome, <%= current_user.name %>!</h1>
          <p class="text-gray-600 mt-2">Manage your gift-giving experience</p>
        </div>
        <%= button_to "Log Out", logout_path, method: :delete,
                      class: "px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition" %>
      </div>
    </div>

    <div class="grid md:grid-cols-3 gap-6">
      <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition">
        <h2 class="text-xl font-semibold text-gray-800 mb-2">Events</h2>
        <p class="text-3xl font-bold text-violet-600 mb-4"><%= current_user.events.count %></p>
        <p class="text-gray-600">Upcoming occasions</p>
      </div>

      <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition">
        <h2 class="text-xl font-semibold text-gray-800 mb-2">Recipients</h2>
        <p class="text-3xl font-bold text-violet-600 mb-4"><%= current_user.recipients.count %></p>
        <p class="text-gray-600">People to gift</p>
      </div>

      <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition">
        <h2 class="text-xl font-semibold text-gray-800 mb-2">Profile</h2>
        <p class="text-gray-600 mb-4">Manage your account</p>
        <%= link_to "Edit Profile", edit_profile_path,
                    class: "inline-block px-4 py-2 bg-violet-600 text-white rounded-lg hover:bg-violet-700 transition" %>
      </div>
    </div>
  </div>
</div>
