<div class="min-h-screen bg-[#f5f5fb] text-gray-900">
  <header class="w-full bg-white shadow-sm">
    <div class="max-w-6xl mx-auto flex items-center justify-between px-6 py-4">
      <%= link_to(current_user.present? ? dashboard_path : root_path,
                  class: "flex items-center gap-2 hover:opacity-90 transition") do %>
        <div class="w-9 h-9 rounded-2xl bg-[#f4e6ff] flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg"
               viewBox="0 0 24 24"
               class="w-6 h-6 text-[#a855f7]"
               fill="none"
               stroke="currentColor"
               stroke-width="2"
               stroke-linecap="round"
               stroke-linejoin="round">
            <rect x="3" y="8" width="18" height="13" rx="2" ry="2"></rect>
            <path d="M12 8v13"></path>
            <path d="M3 12h18"></path>
            <path d="M12 8h4a2 2 0 0 0 0-4c-3 0-4 4-4 4z"></path>
            <path d="M12 8H8a2 2 0 0 1 0-4c3 0 4 4 4 4z"></path>
          </svg>
        </div>
        <span class="text-xl font-semibold tracking-tight">GiftWise</span>
      <% end %>

      <nav class="flex items-center gap-4 text-sm font-medium">
        <span class="text-gray-700">
          Welcome, <%= current_user.name.presence || "there" %>!
        </span>

        <div class="relative" data-controller="dropdown">
          <button
            type="button"
            data-action="click->dropdown#toggle"
            class="w-9 h-9 rounded-full bg-[#f4e6ff] flex items-center justify-center
             hover:bg-[#e9d5ff] transition shadow-sm"
          >
            <svg xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 24 24"
                 class="w-5 h-5 text-[#a855f7]"
                 fill="none"
                 stroke="currentColor"
                 stroke-width="2"
                 stroke-linecap="round"
                 stroke-linejoin="round">
              <circle cx="12" cy="8" r="3"></circle>
              <path d="M6 19c0-3 2.5-5 6-5s6 2 6 5"></path>
            </svg>
          </button>

          <div
            data-dropdown-target="menu"
            class="hidden absolute left-0 mt-3 w-64 origin-top-left rounded-2xl bg-white
         shadow-lg border border-gray-200 py-2 z-50"
          >
            <div class="px-4 pb-2 border-b border-gray-100 mb-2">
              <p class="text-sm font-semibold text-gray-900 truncate">
                <%= current_user.name %>
              </p>
              <% if current_user.respond_to?(:email) && current_user.email.present? %>
                <p class="text-xs text-gray-500 truncate">
                  <%= current_user.email %>
                </p>
              <% end %>
            </div>

            <%= link_to "Edit Profile",
                        edit_profile_path,
                        class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 whitespace-nowrap" %>

            <%= link_to "Change password",
                        edit_password_path,
                        class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 whitespace-nowrap" %>

            <div class="mt-2 pt-2 border-t border-gray-100">
              <%= button_to "Log Out",
                            logout_path,
                            method: :delete,
                            class: "w-full text-left px-4 py-2 text-sm font-medium text-red-600 hover:bg-red-50 whitespace-nowrap" %>
            </div>
          </div>
        </div>
      </nav>
    </div>
  </header>

  <main class="max-w-6xl mx-auto px-6 pt-10 pb-16">
    <h1 class="text-4xl font-semibold mb-8">Dashboard</h1>

    <section class="grid md:grid-cols-2 gap-6 mb-12">
      <div
        class="bg-white rounded-3xl p-6 shadow-sm border border-gray-200 cursor-pointer transition hover:shadow-md"
        onclick="window.location='<%= events_path %>'"
        role="button"
      >
        <div class="flex items-center justify-between mb-3">
          <h3 class="text-lg font-semibold">Events</h3>
          <%= link_to new_event_path,
                      class: "inline-flex items-center justify-center w-9 h-9 rounded-full border border-[#a855f7] text-[#a855f7] hover:bg-[#f4e6ff] hover:border-[#9333ea] hover:text-[#9333ea] transition",
                      title: 'Add Event',
                      onclick: "event.stopPropagation()" do %>
            <span class="text-lg leading-none">+</span>
          <% end %>
        </div>
        <p class="text-3xl font-bold text-[#a855f7]"><%= current_user.events.count %></p>
      </div>

      <div
        class="bg-white rounded-3xl p-6 shadow-sm border border-gray-200 cursor-pointer transition hover:shadow-md"
        onclick="window.location='<%= recipients_path %>'"
        role="button"
      >
        <div class="flex items-center justify-between mb-3">
          <h3 class="text-lg font-semibold">Recipients</h3>
          <%= link_to new_recipient_path,
                      class: "inline-flex items-center justify-center w-9 h-9 rounded-full border border-[#a855f7] text-[#a855f7] hover:bg-[#f4e6ff] hover:border-[#9333ea] hover:text-[#9333ea] transition",
                      title: 'Add Recipient',
                      onclick: "event.stopPropagation()" do %>
            <span class="text-lg leading-none">+</span>
          <% end %>
        </div>
        <p class="text-3xl font-bold text-[#a855f7]"><%= current_user.recipients.count %></p>
      </div>
    </section>

    <section>
      <div class="flex items-center justify-between mb-4">
        <div>
          <h2 class="text-xl font-semibold">Upcoming Events</h2>
          <p class="text-sm text-gray-500">Your next gift-giving occasions</p>
        </div>

        <div class="flex items-center gap-3">
          <%= link_to "View all",
                      events_path,
                      class: "text-sm font-medium text-gray-600 hover:text-gray-900" %>
          <%= link_to "+ Add Event",
                      new_event_path,
                      class: "inline-flex items-center justify-center px-4 py-2 rounded-full bg-[#a855f7] text-white text-sm font-medium hover:bg-[#9333ea] transition" %>
        </div>
      </div>

      <% if @upcoming_events.any? %>
        <div class="bg-white rounded-3xl border border-gray-200 divide-y">
          <% @upcoming_events.each do |event| %>
            <% primary_recipient = event.recipients.first %>
            <% has_recipients = event.recipients.exists? %>

            <div
              class="flex items-center justify-between px-6 py-4 cursor-pointer hover:bg-gray-50"
              onclick="window.location='<%= event_path(event, from: "dashboard") %>'"
            >
              <div class="flex items-center gap-4">
                <div class="w-10 h-10 rounded-2xl bg-[#f4e6ff] flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                       class="w-5 h-5 text-[#a855f7]" fill="none" stroke="currentColor"
                       stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900"><%= event.event_name %></p>
                  <p class="text-sm text-gray-500">
                    <% if primary_recipient.present? %>
                      <%= primary_recipient.name %> •
                    <% else %>
                      No recipient yet •
                    <% end %>
                    <%= event.event_date&.strftime("%b %d, %Y") %>
                  </p>
                </div>
              </div>

              <div class="flex items-center gap-8">
                <div class="text-right">
                  <% if event.budget.present? %>
                    <p class="text-sm font-medium text-gray-800">
                      <%= number_to_currency(event.budget, precision: 0) %>
                    </p>
                  <% else %>
                    <p class="text-xs text-gray-400">No budget set</p>
                  <% end %>
                </div>

                <div class="text-right">
                  <% if event.days_until && event.days_until >= 0 %>
                    <p class="text-sm font-semibold text-[#a855f7]">
                      <%= pluralize(event.days_until, "day") %> left
                    </p>
                  <% else %>
                    <p class="text-xs text-gray-400">Past event</p>
                  <% end %>
                </div>

                <div>
                  <% if has_recipients %>
                    <%= link_to "Get Ideas",
                                event_ai_gift_suggestions_path(event, from: "dashboard"),
                                class: "text-sm font-medium text-[#a855f7] hover:text-[#9333ea] underline-offset-2 hover:underline",
                                onclick: "event.stopPropagation()" %>
                  <% else %>
                    <button
                      type="button"
                      class="text-sm font-medium text-gray-400 cursor-not-allowed"
                      title="Add at least one recipient to enable AI gift ideas"
                      onclick="event.stopPropagation()"
                      disabled
                    >
                      Get Ideas
                    </button>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="bg-white rounded-3xl border border-dashed border-gray-300 px-6 py-8 text-center text-sm text-gray-500">
          No upcoming events yet. Start by adding your first event!
        </div>
      <% end %>
    </section>
  </main>
</div>
