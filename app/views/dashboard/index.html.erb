<div class="min-h-screen bg-[#f5f5fb]">
  <!-- NAVBAR -->
  <header class="w-full bg-white shadow-sm">
    <div class="max-w-6xl mx-auto flex items-center justify-between px-6 py-4">
      <!-- Logo -->
      <div class="flex items-center gap-2">
        <div class="w-9 h-9 rounded-2xl bg-[#f4e6ff] flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg"
               viewBox="0 0 24 24"
               class="w-6 h-6 text-[#a855f7]"
               fill="none"
               stroke="currentColor"
               stroke-width="2"
               stroke-linecap="round"
               stroke-linejoin="round">
            <rect x="3" y="8" width="18" height="13" rx="2" ry="2"></rect>
            <path d="M12 8v13"></path>
            <path d="M3 12h18"></path>
            <path d="M12 8h4a2 2 0 0 0 0-4c-3 0-4 4-4 4z"></path>
            <path d="M12 8H8a2 2 0 0 1 0-4c3 0 4 4 4 4z"></path>
          </svg>
        </div>
        <span class="text-xl font-semibold tracking-tight">GiftWise</span>
      </div>

      <!-- Right side -->
      <nav class="flex items-center gap-6 text-sm font-medium">
        <span class="text-gray-700">Welcome, <%= current_user.name %>!</span>
        <%= button_to "Log Out", logout_path, method: :delete,
                      class: "px-5 py-2 rounded-full bg-black text-white hover:bg-gray-900 transition" %>
      </nav>
    </div>
  </header>

  <!-- MAIN CONTENT -->
  <div class="max-w-6xl mx-auto px-6 py-12">
    <h1 class="text-4xl font-semibold mb-8">Dashboard</h1>

    <!-- EXACTLY 3 CARDS SIDE BY SIDE -->
    <div class="grid md:grid-cols-3 gap-6">

      <!-- Events card -->
      <div class="bg-white rounded-3xl p-6 shadow-sm border border-gray-200">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-lg font-semibold">Events</h3>
          <%= link_to new_event_path, class: "text-[#a855f7] hover:text-[#9333ea] transition" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24"
                 fill="none" stroke="currentColor" stroke-width="2"
                 stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="8" x2="12" y2="16"></line>
              <line x1="8" y1="12" x2="16" y2="12"></line>
            </svg>
          <% end %>
        </div>

        <p class="text-3xl font-bold text-[#a855f7]"><%= current_user.events.count %></p>
      </div>

      <!-- Recipients card -->
      <div
        class="bg-white rounded-3xl p-6 shadow-sm border border-gray-200 cursor-pointer hover:shadow-md hover:border-[#a855f7]/40 transition"
        onclick="if (!event.target.closest('a')) { window.location.href = '<%= recipients_path %>'; }">

      <div class="flex items-center justify-between mb-2">
          <h3 class="text-lg font-semibold">Recipients</h3>

          <!-- plus icon goes to NEW recipient page -->
          <%= link_to new_recipient_path,
                      class: "text-[#a855f7] hover:text-[#9333ea] transition",
                      onclick: "event.stopPropagation();" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24"
                 fill="none" stroke="currentColor" stroke-width="2"
                 stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="8" x2="12" y2="16"></line>
              <line x1="8" y1="12" x2="16" y2="12"></line>
            </svg>
          <% end %>
        </div>

        <p class="text-3xl font-bold text-[#a855f7]">
          <%= current_user.recipients.count %>
        </p>
      </div>

      <!-- Profile card -->
      <div class="bg-white rounded-3xl p-6 shadow-sm border border-gray-200">
        <h3 class="text-lg font-semibold mb-2">Profile</h3>
        <p class="text-sm text-gray-600">Manage your account</p>
      </div>

    </div>
  </div>
</div>

