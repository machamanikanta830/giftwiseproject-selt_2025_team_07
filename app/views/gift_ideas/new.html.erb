<!-- app/views/gift_ideas/new.html.erb -->
<div class="fixed inset-0 bg-black/40 backdrop-blur-sm flex items-center justify-center z-50">
  <div class="bg-white rounded-2xl p-6 w-full max-w-md shadow-xl animate-fadeInScale">

    <h2 class="text-xl font-bold mb-4">Add Gift Idea</h2>

    <%= form_with(model: [@recipient, @gift_idea], local: true, data: { turbo: false }) do |f| %>

      <% if @gift_idea.errors.any? %>
        <div class="mb-4 rounded-2xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
          <p class="font-semibold">
            <%= pluralize(@gift_idea.errors.count, "error") %> prohibited this gift idea from being saved:
          </p>
          <ul class="mt-2 list-disc list-inside">
            <% @gift_idea.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :gift_idea, class: "block text-sm font-medium text-gray-700 mb-1" do %>
          Gift Idea <span class="text-red-500" aria-hidden="true">*</span>
        <% end %>
        <%= f.text_field :idea, class: "w-full px-3 py-2 border rounded-xl" %>
      </div>

      <div class="mb-3">
        <%= f.label :description, "Description" %>
        <%= f.text_area :description, class: "w-full px-3 py-2 border rounded-xl" %>
      </div>

      <div class="mb-3">
        <%= f.label :price_estimate, "Estimated Price" %>
        <%= f.number_field :price_estimate, step: 0.01, class: "w-full px-3 py-2 border rounded-xl" %>
      </div>

      <div class="mb-3">
        <%= f.label :link, "Link" %>
        <%= f.text_field :link, class: "w-full px-3 py-2 border rounded-xl" %>
      </div>

      <div class="flex justify-end gap-3 mt-6">
        <!-- Cancel -->
        <%= link_to "Cancel",
                    recipients_path,
                    class: "inline-flex items-center rounded-full border border-gray-300 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>

        <!-- Save Button -->
        <%= f.submit "Save",
                     class: "px-5 py-2 rounded-full bg-gray-100 text-gray-700 font-medium hover:bg-gray-200 transition" %>
      </div>

    <% end %>

  </div>
</div>
