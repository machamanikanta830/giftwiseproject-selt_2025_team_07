<div class="min-h-screen bg-[#f5f5fb]">
  <!-- NAVBAR -->
  <header class="w-full bg-white shadow-sm">
    <div class="max-w-6xl mx-auto flex items-center justify-between px-6 py-4">
      <div class="flex items-center gap-2">
        <div class="w-9 h-9 rounded-2xl bg-[#f4e6ff] flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg"
               viewBox="0 0 24 24"
               class="w-6 h-6 text-[#a855f7]"
               fill="none"
               stroke="currentColor"
               stroke-width="2"
               stroke-linecap="round"
               stroke-linejoin="round">
            <rect x="3" y="8" width="18" height="13" rx="2" ry="2"></rect>
            <path d="M12 8v13"></path>
            <path d="M3 12h18"></path>
            <path d="M12 8h4a2 2 0 0 0 0-4c-3 0-4 4-4 4z"></path>
            <path d="M12 8H8a2 2 0 0 1 0-4c3 0 4 4 4 4z"></path>
          </svg>
        </div>
        <span class="text-xl font-semibold tracking-tight">GiftWise</span>
      </div>

      <nav class="flex items-center gap-6 text-sm font-medium">
        <span class="text-gray-700">Welcome, <%= current_user.name %>!</span>
        <%= button_to "Log Out",
                      logout_path,
                      method: :delete,
                      class: "px-5 py-2 rounded-full bg-black text-white hover:bg-gray-900 transition" %>
      </nav>
    </div>
  </header>

  <div class="max-w-6xl mx-auto px-6 py-10 pb-24">
    <!-- Top bar: back + title + add -->
    <div class="flex items-center justify-between mb-8">
      <div class="flex items-center gap-4">
        <%= link_to "← Back to Dashboard",
                    dashboard_path,
                    class: "inline-flex items-center px-4 py-2 rounded-full border border-gray-300 text-sm text-gray-700 hover:bg-gray-100" %>
        <h1 class="text-3xl font-semibold">All Events</h1>
      </div>

      <%= link_to "+ Add Event",
                  new_event_path,
                  class: "inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#a855f7] text-white text-sm font-medium hover:bg-[#9333ea] transition" %>
    </div>

    <!-- Upcoming events -->
    <section class="mb-10">
      <h2 class="text-lg font-semibold mb-3">Upcoming Events</h2>

      <% if @upcoming_events.any? %>
        <div class="bg-white rounded-3xl border border-gray-200 divide-y">
          <% @upcoming_events.each do |event| %>
            <% primary_recipient = event.recipients.first %>

            <%= link_to event_path(event), class: "block hover:bg-gray-50 transition" do %>
              <div class="px-6 py-4 flex items-center justify-between">
                <div class="flex items-center gap-4">
                  <div class="w-10 h-10 rounded-2xl bg-[#f4e6ff] flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         viewBox="0 0 24 24"
                         class="w-5 h-5 text-[#a855f7]"
                         fill="none"
                         stroke="currentColor"
                         stroke-width="2"
                         stroke-linecap="round"
                         stroke-linejoin="round">
                      <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                      <line x1="16" y1="2" x2="16" y2="6"></line>
                      <line x1="8" y1="2" x2="8" y2="6"></line>
                      <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                  </div>

                  <div>
                    <p class="font-medium text-gray-900"><%= event.event_name %></p>
                    <p class="text-sm text-gray-500">
                      <% if primary_recipient.present? %>
                        <%= primary_recipient.name %> •
                      <% else %>
                        No recipient yet •
                      <% end %>
                      <%= event.event_date&.strftime("%b %d, %Y") %>
                    </p>
                  </div>
                </div>

                <div class="flex items-center gap-8">
                  <div class="text-right">
                    <% if event.budget.present? %>
                      <p class="text-sm font-medium text-gray-800">
                        <%= number_to_currency(event.budget, precision: 0) %>
                      </p>
                    <% else %>
                      <p class="text-xs text-gray-400">No budget set</p>
                    <% end %>
                  </div>

                  <div class="text-right">
                    <% if event.days_until && event.days_until >= 0 %>
                      <p class="text-sm font-semibold text-[#a855f7]">
                        <%= pluralize(event.days_until, "day") %> left
                      </p>
                    <% else %>
                      <p class="text-xs text-gray-400">Past event</p>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-500">You don’t have any upcoming events yet.</p>
      <% end %>
    </section>


    <!-- Past events -->
    <section>
      <h2 class="text-lg font-semibold mb-3">Past Events</h2>

      <% if @past_events.any? %>
        <div class="bg-white rounded-3xl border border-gray-200 divide-y">
          <% @past_events.each do |event| %>
            <% primary_recipient = event.recipients.first %>

            <%= link_to event_path(event), class: "block hover:bg-gray-50 transition" do %>
              <div class="px-6 py-4 flex items-center justify-between opacity-80">
                <div class="flex items-center gap-4">
                  <div class="w-10 h-10 rounded-2xl bg-gray-100 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         viewBox="0 0 24 24"
                         class="w-5 h-5 text-gray-400"
                         fill="none"
                         stroke="currentColor"
                         stroke-width="2"
                         stroke-linecap="round"
                         stroke-linejoin="round">
                      <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                      <line x1="16" y1="2" x2="16" y2="6"></line>
                      <line x1="8" y1="2" x2="8" y2="6"></line>
                      <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                  </div>

                  <div>
                    <p class="font-medium text-gray-800"><%= event.event_name %></p>
                    <p class="text-sm text-gray-500">
                      <% if primary_recipient.present? %>
                        <%= primary_recipient.name %> •
                      <% else %>
                        No recipient •
                      <% end %>
                      <%= event.event_date&.strftime("%b %d, %Y") %>
                    </p>
                  </div>
                </div>

                <div class="text-right text-xs text-gray-400">
                  Past event
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-500">No past events yet.</p>
      <% end %>
    </section>

  </div>

  <!-- Floating + button bottom-right -->
  <div class="fixed bottom-8 right-8">
    <%= link_to "+",
                new_event_path,
                class: "inline-flex items-center justify-center w-14 h-14 rounded-full bg-[#a855f7] text-white text-2xl font-semibold shadow-lg hover:bg-[#9333ea] transition",
                title: "Add Event" %>
  </div>
</div>
