<div class="min-h-screen bg-[#f5f5fb] flex items-center justify-center py-12 px-4">
  <div class="w-full max-w-md">

    <div class="bg-white rounded-3xl p-8 shadow-sm border border-gray-200">
      <div class="text-center mb-8">
        <div class="w-16 h-16 rounded-2xl bg-[#f4e6ff] flex items-center justify-center mx-auto mb-4">
        </div>
        <h1 class="text-2xl font-bold mb-2">Create New Event</h1>
        <p class="text-gray-600 text-sm">Plan your special occasion</p>
      </div>

      <%= form_with model: @event, local: true, html: { id: 'event-form' } do |f| %>
        <% if @event.errors.any? %>
          <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-2xl">
            <h3 class="text-red-800 font-semibold mb-2 text-sm">
              <%= pluralize(@event.errors.count, "error") %> prevented this event from being saved:
            </h3>
            <ul class="list-disc list-inside text-red-700 text-sm">
              <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-4">
          <!-- Event Name -->
          <div>
            <%= f.label :event_name, "Event Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :event_name,
                             class: "w-full px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-[#a855f7] focus:border-transparent outline-none transition mb-4",
                             placeholder: "e.g., Mom's Birthday Party",
                             required: true %>
          </div>



          <!-- Event Date -->
          <div>
            <%= f.label :event_date, "Event Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.date_field :event_date,
                             min: Date.today,
                             class: "w-full px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-[#a855f7] focus:border-transparent outline-none transition mb-4",
                             required: true %>
          </div>

          <!-- Location with Autocomplete -->
          <div>
            <%= f.label :location, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :location,
                             list: "locations",
                             class: "w-full px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-[#a855f7] focus:border-transparent outline-none transition mb-4",
                             placeholder: "e.g., Home, Restaurant, Park",
                             autocomplete: "off" %>
          </div>

          <!-- Budget with $ symbol -->
          <div>
            <%= f.label :budget, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="relative">
              <span class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500 font-medium"></span>
              <%= f.number_field :budget,
                                 step: 0.02,
                                 min: 0,
                                 class: "w-full pl-8 pr-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-[#a855f7] focus:border-transparent outline-none transition mb-4",
                                 placeholder: "   0.00" %>
            </div>
          </div>

          <!-- Description -->
          <div>
            <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_area :description,
                            rows: 3,
                            class: "w-full px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-[#a855f7] focus:border-transparent outline-none transition resize-none mb-4",
                            placeholder: "Add details about the event..." %>
          </div>

          <!-- Recipients (if any exist) -->
          <% if @recipients.any? %>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-3">Add Recipients (Optional)</label>
              <div class="space-y-2 max-h-40 overflow-y-auto p-3 border border-gray-200 rounded-2xl bg-gray-50">
                <% @recipients.each do |recipient| %>
                  <label class="flex items-center gap-3 p-2 hover:bg-white rounded-xl cursor-pointer transition">
                    <%= check_box_tag 'recipient_ids[]', recipient.id, false,
                                      class: "w-4 h-4 text-[#a855f7] rounded focus:ring-[#a855f7] border-gray-300" %>
                    <span class="text-sm font-medium"><%= recipient.name %></span>
                    <% if recipient.relationship.present? %>
                      <span class="text-xs text-gray-500 bg-white px-2 py-1 rounded-full">
                        <%= recipient.relationship %>
                      </span>
                    <% end %>
                  </label>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Submit Button -->
          <%= f.submit "Create Event",
                       class: "w-full py-3 px-6 rounded-full bg-black text-white font-semibold hover:bg-gray-900 transition cursor-pointer" %>

          <%= link_to "Back to dashboard", dashboard_path,
                      class: "block text-center w-full py-3 px-6 rounded-full bg-gray-100 text-gray-700 font-semibold hover:bg-gray-200 transition mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

