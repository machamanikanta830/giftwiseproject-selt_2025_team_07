<div class="min-h-screen bg-[#f5f5fb] flex items-center justify-center px-6">
  <div class="w-full max-w-md">
    <div class="bg-white rounded-3xl shadow-lg p-8">
      <div class="flex items-center justify-center mb-8">
        <div class="w-12 h-12 rounded-2xl bg-[#f4e6ff] flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-8 h-8 text-[#a855f7]" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
          </svg>
        </div>
      </div>

      <h1 class="text-3xl font-semibold text-center mb-2">Reset Your Password</h1>
      <p class="text-gray-600 text-center mb-8">Enter your new password below.</p>

      <% if flash[:alert] %>
        <div class="mb-6 px-4 py-3 rounded-lg bg-red-50 border border-red-200 text-red-700">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= form_with url: reset_password_path(token: @token.token), method: :patch, scope: :user, class: "space-y-6" do |f| %>
        <div class="space-y-1">
          <%= f.label :password, "New Password", class: "block text-sm font-medium text-gray-700 mb-2" %>

          <div data-controller="password-visibility">
            <div class="flex items-center border border-gray-300 rounded-lg focus-within:ring-2 focus-within:ring-[#a855f7] focus-within:border-transparent">
              <%= f.password_field :password,
                                   required: true,
                                   autocomplete: "new-password",
                                   class: "flex-1 px-4 py-3 rounded-lg border-none focus:outline-none",
                                   data: { "password-visibility-target": "input" } %>

              <button type="button" data-action="click->password-visibility#toggle" class="px-3 text-gray-400 hover:text-gray-600" aria-label="Toggle password visibility">
                <svg data-password-visibility-target="iconOn" xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7S1 12 1 12z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
                <svg data-password-visibility-target="iconOff" xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M17.94 17.94A10.94 10.94 0 0 1 12 19c-7 0-11-7-11-7a21.77 21.77 0 0 1 5.06-5.94"/>
                  <path d="M1 1l22 22"/>
                  <path d="M9.88 9.88A3 3 0 0 0 12 15a3 3 0 0 0 2.12-.88"/>
                </svg>
              </button>
            </div>
          </div>

          <p class="mt-2 text-sm text-gray-500">Must be at least 8 characters with uppercase, lowercase, number, and special character</p>
        </div>

        <div class="space-y-1">
          <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-gray-700 mb-2" %>

          <div data-controller="password-visibility">
            <div class="flex items-center border border-gray-300 rounded-lg focus-within:ring-2 focus-within:ring-[#a855f7] focus-within:border-transparent">
              <%= f.password_field :password_confirmation,
                                   required: true,
                                   autocomplete: "new-password",
                                   class: "flex-1 px-4 py-3 rounded-lg border-none focus:outline-none",
                                   data: { "password-visibility-target": "input" } %>

              <button type="button" data-action="click->password-visibility#toggle" class="px-3 text-gray-400 hover:text-gray-600" aria-label="Toggle password visibility">
                <svg data-password-visibility-target="iconOn" xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7S1 12 1 12z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
                <svg data-password-visibility-target="iconOff" xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M17.94 17.94A10.94 10.94 0 0 1 12 19c-7 0-11-7-11-7a21.77 21.77 0 0 1 5.06-5.94"/>
                  <path d="M1 1l22 22"/>
                  <path d="M9.88 9.88A3 3 0 0 0 12 15a3 3 0 0 0 2.12-.88"/>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <div>
          <%= f.submit "Reset Password",
                       class: "w-full px-8 py-3 rounded-full bg-black text-white font-semibold hover:bg-gray-900 transition cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <%= link_to "â† Back to Login", login_path, class: "text-sm text-gray-600 hover:text-gray-900 transition" %>
      </div>
    </div>
  </div>
</div>