<turbo-frame id="modal">
  <div class="fixed inset-0 bg-black/30 backdrop-blur-sm flex items-center justify-center z-50">
    <div class="bg-white rounded-3xl p-8 w-full max-w-lg shadow-xl animate-fadeIn">

      <!-- Title -->
      <h2 class="text-2xl font-bold mb-6 text-gray-900">Add Gift Given</h2>

      <!-- Form -->
      <%= form_with model: [@recipient, @gift_given_backlog], data: { turbo: false } do |f| %>

        <div class="mb-4">
          <%= f.label :gift_name, class: "block text-sm font-medium text-gray-700 mb-1" do %>
            Gift name <span class="text-red-500" aria-hidden="true">*</span>
          <% end %>
          <%= f.text_field :gift_name,
                           required: true,
                           class: "w-full px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-purple-500" %>
        </div>

        <div class="mb-4">
          <%= f.label :event_name, "Event name", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :event_name, class: "w-full px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-purple-500" %>
        </div>

        <div class="mb-4">
          <%= f.label :price, "Price", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :price, step: 0.01, class: "w-full px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-purple-500" %>
        </div>

        <div class="mb-4">
          <%= f.label :category, "Category", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :category, class: "w-full px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-purple-500" %>
        </div>

        <div class="mb-4">
          <%= f.label :purchase_link, "Purchase link", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :purchase_link, class: "w-full px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-purple-500" %>
        </div>

        <div class="mb-6">
          <%= f.label :given_on, "Given on", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :given_on, class: "w-full px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-purple-500" %>
        </div>

        <!-- Buttons -->
        <div class="flex justify-end gap-3 mt-6">
          <!-- Cancel -->
          <%= link_to "Cancel", recipients_path,
                      class: "inline-flex items-center rounded-full border border-gray-300 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>

          <!-- Save Button -->
          <%= f.submit "Save",
                       class: "px-5 py-2 rounded-full bg-gray-100 text-gray-700 font-medium hover:bg-gray-200 transition" %>
        </div>

      <% end %>

    </div>
  </div>
</turbo-frame>
